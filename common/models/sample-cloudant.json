{
  "name": "Sample-Cloudant",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "amount": {
      "type": "number"
    },
    "timestamp": {
      "type": "date"
    },
    "somelist": {
      "type": [
        "string"
      ]
    }
  },
  "validations": [],
  "relations": {},
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": "*"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "*"
    }
  ],
  "methods": {
    "getAttachment": {
      "accepts": [
        {
          "arg": "id",
          "type": "string"
        },
        {
          "arg": "filename",
          "type": "string"
        },
        {
          "arg": "contenttype",
          "type": "string"
        }
      ],
      "returns": [
        {
          "arg": "body",
          "type": "file",
          "root": true
        },
        {
          "arg": "Content-Type",
          "type": "string",
          "http": {
            "target": "header"
          }
        }
      ],
      "http": {
        "verb": "get"
      }
    },
    "saveAttachment": {
      "accepts": [
        {
          "arg": "req",
          "type": "object",
          "http": {
            "source": "req"
          }
        },
        {
          "arg": "res",
          "type": "object",
          "http": {
            "source": "res"
          }
        },
        {
          "arg": "id",
          "type": "string"
        }
      ],
      "returns": {
        "arg": "status",
        "type": "string"
      }
    }
  }
}
